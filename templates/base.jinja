{# template/base.jinja #}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>APOD Viewer</title>
</head>
<body>
    <h1>APOD Viewer {{ date }}</h1>
    <form action="/" method="post">
        <p>
        <input type = "date" name = "date" value="{{ date }}" min="1995-06-16" max="{{ today }}" />
        <input type = "submit" value = "submit" />
        </p>
    </form>
    <h2>{{ title }}</h2>
    <img src="{{ image }}" alt="Image of the day">
    <p>{{ explanation }}</p>
</body>
</html>